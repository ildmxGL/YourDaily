<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPreDaily">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/photo_constraintlayout">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/predaily_image"
                android:clickable="true"
                android:src="@drawable/daily_add"/>
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:text="HashTags (Seperate with #)"
            android:textAlignment="center"
            android:layout_below="@id/photo_constraintlayout"
            android:id="@+id/hashtag_textview"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hashtag_edittext"
            android:layout_below="@+id/hashtag_textview"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/hashtag_edittext"
            android:id="@+id/upload_predaily"
            android:layout_marginTop="20dp"/>



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>