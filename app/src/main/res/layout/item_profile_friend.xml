<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile_image_irene3"
            android:padding="4dp"
            android:layout_marginStart="130dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-5dp"
            android:background="@drawable/white_round_profile_friend"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile_image_irene2"
            android:padding="4dp"
            android:layout_marginStart="90dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_round_profile_friend" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile_image_irene1"
            android:padding="4dp"
            android:layout_marginStart="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_round_profile_friend"
            android:layout_marginTop="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@drawable/profile_image_irene"
            android:id="@+id/profile_image"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/white_grey" />
    </FrameLayout>



</RelativeLayout>